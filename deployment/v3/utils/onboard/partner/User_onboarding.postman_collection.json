							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{url}}/keycloak/auth/admin/realms/mosip/users",
							"host": [
								"{{url}}"
							],
							"path": [
								"keycloak",
								"auth",
								"admin",
								"realms",
								"mosip",
								"users"
