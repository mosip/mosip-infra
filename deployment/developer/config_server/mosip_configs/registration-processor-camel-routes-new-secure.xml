			</otherwise>
		</choice>
	</route>
	<route id="abis-middleware route-->abis-handler new route">
		<from uri="vertx:abis-middle-ware-new-bus-out" />
		<log
			message="abis-middleware route-->abis-handler new route ${bodyAs(String)}" />
           <to uri="vertx:abis-handler-bus-in" />
	</route>
</routes>
