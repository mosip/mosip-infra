serviceName: converter

activeProfileEnv: default
springConfigLabel: {{ config_repo.version }}
configServerUrl: {{ config_server.internal_url }}
imagePullPolicy: Always
artifactoryUrl: {{ artifactory_url }}
iamAdapterUrl: {{ iam_adapter_url }}
isGlowroot: absent
sitePublicUrl: {{ site.sandbox_public_url }}

probe:
  period: 10 # Seconds
  timeout: 5
  livenessPeriod: 10
  failureThreshold: 30
  startupPeriod: 10
  initialDelaySeconds: 60

docker:
  image: {{ versions.services.converter.service.values()[0] }}
  ports:
    containerPort: 8089
    servicePort: 80

version: {{ versions.services.converter.values()[0] }}

services:
  converter:
    podconfig:
      {{ podconfig.converter.service | to_nice_yaml(indent=6) | indent(6) }}
    healthUrl: /v1/converter/actuator/health

exportLogs: enabled  # Let filebeat export the logs