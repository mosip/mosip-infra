---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: kernel-auth-service
  namespace: default
spec:
  replicas: 1
  selector:
    matchLabels:
      app: kernel-auth-service
  minReadySeconds: 10
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 1
      maxSurge: 1 
  template:
    metadata:
      labels:
        app: kernel-auth-service
    spec:
      containers:
      - name: kernel-auth-service
        image: '{{auth_image}}:{{auth_version}}'
        env:
        - name: active_profile_env
          value: qa
        - name: spring_config_label_env
          value: master
        - name: spring_config_url_env
          value: '{{config_server_url}}' 
        - name: artifactory_url_env
          value: '{{artifactory_uri}}' 
        - name: is_glowroot_env
          value: absent
        ports:
        - containerPort: 8091
        imagePullPolicy: Always
---
apiVersion: v1
kind: Service
metadata:
  name: kernel-auth-service
  namespace: default
spec:
  ports:
    - port: 8091
  selector:
    app: kernel-auth-service
  type: NodePort
