          servicePort: 80

      - path: /preregistration/v1/appointment
        backend:
          serviceName: {{prereg_booking_name}}
          servicePort: 80

      - path: /preregistration/v1/batch
        backend:
          serviceName: {{prereg_batchjob_name}}
          servicePort: 80

      - path: /preregistration/v1/transliteration
