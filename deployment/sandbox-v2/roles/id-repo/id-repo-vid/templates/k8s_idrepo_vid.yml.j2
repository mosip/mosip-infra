---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{idrepo_vid_name}}
  namespace: default
  labels:
    module: idrepo
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{idrepo_vid_name}}
  minReadySeconds: 10
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 1
      maxSurge: 1 
  template:
    metadata:
      labels:
        app: {{idrepo_vid_name}}
        module: idrepo
    spec:
      containers:
      - name: {{idrepo_vid_name}}
        image: '{{idrepo_vid_image}}:{{idrepo_vid_version}}'
        env:
        - name: active_profile_env
          value: qa
        - name: spring_config_label_env
          value: master
        - name: spring_config_url_env
          value: {{config_server_url}}
        - name: artifactory_url_env
          value: '{{artifactory_uri}}'
        - name: is_glowroot_env
          value: absent
        ports:
        - containerPort: {{idrepo_vid_container_port}}
        readinessProbe:
          tcpSocket:
            port: {{idrepo_vid_container_port}}  # All defaults used
